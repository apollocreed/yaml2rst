from __future__ import print_function

__author__ = "Hartmut Goebel <h.goebel@crazy-compilers.com>"
__copyright__ = "Copyright 2015 by Hartmut Goebel <h.goebel@crazy-compilers.com>"
__licence__ = "GNU General Public License version 3 (GPL v3)"
__version__ = "0.1"


import yaml2rst
import argparse
import sys

def main(infile, outfile):
    if infile == '-':
        infh = sys.stdin
    else:
        infh = open(infile)
    if outfile == '-':
        outfh = sys.stdout
    else:
        outfh = open(outfile)
    for l in yaml2rst.convert(infh.splitlines()):
        print(l, file=outfh)


parser = argparse.ArgumentParser()
parser.add_argument('infilename', metavar='infile')
parser.add_argument('outfilename', metavar='outfile')
args = parser.parse_args
main(**vars(args))

